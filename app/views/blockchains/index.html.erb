<p id="notice"><%= notice %></p>

<h1>Blockchains</h1>

<table>
  <thead>
    <tr>
      <th>Raw content</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Height</th>
      <th>Deposit</th>
      <th>Gas burnt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blockchains.each do |blockchain| %>
      <tr>
        <td><%= blockchain.raw_content %></td>
        <td><%= blockchain.sender %></td>
        <td><%= blockchain.receiver %></td>
        <td><%= blockchain.height %></td>
        <td><%= blockchain.deposit %></td>
        <td><%= blockchain.gas_burnt %></td>
        <td><%= link_to 'Show', blockchain %></td>
        <td><%= link_to 'Edit', edit_blockchain_path(blockchain) %></td>
        <td><%= link_to 'Destroy', blockchain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blockchain', new_blockchain_path %>
